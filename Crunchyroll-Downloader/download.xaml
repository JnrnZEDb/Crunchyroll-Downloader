<Window x:Class="CrunchyrollDownloader.download"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrunchyrollDownloader"
        mc:Ignorable="d"
        Title="Downloading ..." Height="168.75" Width="366.477" Icon="crlogo.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" IsTabStop="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="fond.jpg"/>
        </Grid.Background>
        <Image x:Name="crunchy_png" Margin="35,10,36,58" Source="crunchy.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <ProgressBar x:Name="download_bar" HorizontalAlignment="Left" Height="25" Margin="10,107,0,0" VerticalAlignment="Top" Width="338" IsIndeterminate="True" Value="50" Cursor="None" Grid.ColumnSpan="2" />
    </Grid>
</Window>
